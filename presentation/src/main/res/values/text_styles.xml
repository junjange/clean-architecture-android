<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Subtitle16Bold">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Body15Regular">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Body15Bold">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="HomeTextInput">
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/color_control_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="editTextColor">@color/black</item>
    </style>

    <style name="TodoTitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TodoBody">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TodoItem">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/shape_solid_n11_stroke_n1_1_corner_rounded_21</item>
    </style>

    <style name="TodoDetailItem">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/shape_solid_n11_stroke_n1_1_corner_rounded_21</item>
    </style>

    <style name="Widget.Todo.TextView.Home.Floating" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_solid_n3_stroke_n3_corner_rounded_21</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="PhotoItem">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/shape_solid_n11_stroke_n1_1_corner_rounded_21</item>
    </style>

    <style name="PhotoAuthor">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>]
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="PhotoDownloadUrl">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="maxLines">1</item>
    </style>
</resources>